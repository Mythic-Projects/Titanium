diff --git a/src/main/java/net/minecraft/server/NibbleArray.java b/src/main/java/net/minecraft/server/NibbleArray.java
index 9306f97a..69e2f0a9 100644
--- a/src/main/java/net/minecraft/server/NibbleArray.java
