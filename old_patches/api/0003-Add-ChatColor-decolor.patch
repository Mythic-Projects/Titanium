+    /**
+     * Replace ยง in input with &
+     *
+     * @param input String to replace
+     * @return String with ยง replaced with &
+     */
+    public static String decolor(String input) {
+        if (input == null) {
+            return null;
+        }
+
+        return DECOLOR_PATTERN.matcher(input).replaceAll("&$1");
+    }
